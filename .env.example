# N8N Webhook Configuration
N8N_BASE_URL=
N8N_TEST_BASE_URL=
N8N_WEBHOOK_ID=

# Fast Eat API Configuration
FAST_EAT_API_URL=

# Supabase Configuration
# Required for server API routes that read/write customer address and reviews.
# Keep service role key server-only (do not expose it in client bundles).
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Home Discovery experimentation (client-side)
NEXT_PUBLIC_HOME_EXPERIMENT_ID=home_discovery_variant_v1
NEXT_PUBLIC_HOME_EXPERIMENT_VARIANTS=rails_assistant,rails_only
NEXT_PUBLIC_HOME_VISUAL_HIERARCHY_V2=true
NEXT_PUBLIC_HOME_STORY_MENUS=true
NEXT_PUBLIC_HOME_FRIENDS_ACTIVITY=true
NEXT_PUBLIC_REVIEWS_ENABLED=true
NEXT_PUBLIC_DELIVERY_REVIEWS_ENABLED=true
# Optional override for QA/canary (control|intent_first|rails_only|rails_assistant)
# NEXT_PUBLIC_HOME_EXPERIMENT_FORCE_VARIANT=
# Canary exposure percentage (0-100). Users outside cohort fall back to baseline variant.
NEXT_PUBLIC_HOME_EXPERIMENT_CANARY_PERCENT=20
# Baseline variant for users outside canary cohort.
NEXT_PUBLIC_HOME_EXPERIMENT_BASELINE_VARIANT=control
# Optional analytics dimension for geo segmentation
# NEXT_PUBLIC_HOME_GEO_BUCKET=

